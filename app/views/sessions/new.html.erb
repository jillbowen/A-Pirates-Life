<h1>Login to see yer maps and treasures</h1>

<p><%= flash[:error] %></p>

<%= form_tag '/login', method: :post do %>
    <p><%= label_tag :name, "Yer Name:" %>
    <%= text_field_tag :name %></p>

    <p><%= label_tag :password, "Yer Secret Code:" %>
    <%= password_field_tag :password %></p>

    <p><%= submit_tag "Head to the High Seas" %></p>

    <p><%= link_to "Or login with Github", '/auth/github' %>

    <p><%= link_to "Back to the home page", '/' %></p>
<% end %>
